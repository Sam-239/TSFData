<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="292dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:background="#039BE5"
        android:text=" Professional Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DESIGNATION"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ORGANISATION2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ORGANISATION2"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/STARTDATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/STARTDATE"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ENDDATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ENDDATE"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="50dp"
        android:background="#19353535"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="198dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toTopOf="@+id/DESIGNATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/professionalicon" />

    <Button
        android:id="@+id/editprof"
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="341dp"
        android:layout_marginRight="341dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toTopOf="@+id/DESIGNATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteprof"
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginStart="254dp"
        android:layout_marginLeft="254dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="11dp"
        android:background="@android:drawable/ic_menu_delete"
        app:layout_constraintBottom_toTopOf="@+id/DESIGNATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editprof" />
</androidx.constraintlayout.widget.ConstraintLayout>