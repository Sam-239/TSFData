<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PersonalInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Personalinfo">


    <EditText
        android:id="@+id/linkS"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Links"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/Skills"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="25dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Skills"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/savePersonalDet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/location1"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/linkS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/location1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Email Id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_personal"
        android:layout_width="251dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:background="#039BE5"
        android:text="   Personal Info"
        android:textColor="#000000"
        android:textSize="36sp"
        app:fontFamily="@font/actor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="#37A0A0A0"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/emailID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/savePersonalDet"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginBottom="25dp"
        android:background="#039BE5"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/setProfilepic"
        android:layout_width="188dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_personal"
        app:srcCompat="@drawable/personalicon" />


</androidx.constraintlayout.widget.ConstraintLayout>