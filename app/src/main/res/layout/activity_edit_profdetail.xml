<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".editProfdetail">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="289dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:background="#039BE5"
        android:text=" Professional Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Designationedit"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:hint="Designation"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/OrganiSationedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/OrganiSationedit"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:hint="Organisation"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Start_Dateedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Start_Dateedit"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="#19353535"
        android:hint="Start date"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/End_Dateedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/End_Dateedit"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginBottom="25dp"
        android:background="#19353535"
        android:hint="End date"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/saveProfessionaldetedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveProfessionaldetedit"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:background="#039BE5"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="178dp"
        android:layout_height="155dp"
        app:layout_constraintBottom_toTopOf="@+id/Designationedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/professionalicon" />
</androidx.constraintlayout.widget.ConstraintLayout>